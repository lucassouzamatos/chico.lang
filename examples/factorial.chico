fun factorial (V) -> 
  let builder = fun (Self) ->
    fun (N) ->
      match N with
        (1) -> 1 done
        (_) -> 
          let X = apply - N 1 done
          let Y = apply Self X done

          apply * N Y done
      done
    done
  done

  let bind = apply recur.wrap builder done
  apply bind V done
done

fun start () ->
  let result = apply factorial 4 done
  apply erlang.display result done
done
